{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
    "declaration": true,
    "declarationDir": "./dist",
    "baseUrl": ".",
    "rootDirs": [
      "./src",
      "./stories"
    ],
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "~/": [
        "./src/"
      ]
    },
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "./.storybook",
    "./stories"
  ],
  "include": [
    "src/",
  ]
}
